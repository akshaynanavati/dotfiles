# Show git branch in prompt
source ~/.git_prompt

###Change the terminal prompt
PS1="[\`if [ \$? = 0 ]; then echo \[\e[32m\]^_^\[\e[0m\]; else echo \[\e[31m\]O_O\[\e[0m\]; fi\`\[\e[0;34m\$(__git_ps1)\[\e[0m\]]\n(\[\e[33m\]\u\[\e[0m\]:\[\e[32m\]\W\[\e[0m\])\$ "

export CLICOLOR=1
export LSCOLORS=gxBxhxDxfxhxhxhxhxcxcx

export EDITOR=vim

alias ll="ls -lt"
alias la="ls -lta"
alias lr="ls -altr"

function mkcd () { mkdir -p "$@" && eval cd "\"\$$#\""; }
